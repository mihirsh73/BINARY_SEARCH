// find maximum of the minimum distace
bool check(vector<int> positions, int cows, int dist)
{
    int count=1;
    int last_placed=positions[0];
    for(int i=1; i<positions.size(); i++)
    {
        if(positions[i]-last_placed>=dist)     // greater or equal to the distance we are taking 
        {
            count++;
            last_placed=positions[i];
        }
        
    }
    if(count>=cows) return true;
    return false;
}
int chessTournament(vector<int> positions , int n ,  int c){
	// Write your code here
    sort(positions.begin(),positions.end());
    int l=1;
    int r= positions[positions.size()-1]-positions[0];               // TC(N(LOG(N))
    int ans=-1;
    while(l<=r)
    {
        int mid =(l+r)/2;
        if(check(positions,c,mid)==true)
        {
            ans=mid; 
           l=mid+1;
        }
        else{
            r=mid-1;
        }
    }
    return ans;
}
